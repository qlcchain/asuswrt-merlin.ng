TOOL_INC_DIR:=
BIN_DIR := ../bin
TARGET=winq_server

CC := $(CROSS_COMPILE)gcc
AR := $(CROSS_COMPILE)ar
AS := $(CROSS_COMPILE)as
LD := $(CROSS_COMPILE)ld
NM := $(CROSS_COMPILE)nm
STRIP := $(CROSS_COMPILE)strip

MOUDLE_CFLAGS += -Wall -g $(CPPFLAGS)

CP := cp

MODULE_MM=-MM
MODULE_TOP_DIR:=.
MODULE_BIN_DIR:=$(MODULE_TOP_DIR)/src
MODULE_SRC_DIR:=$(MODULE_TOP_DIR)/src
MODULE_INC_DIR:=-I$(MODULE_TOP_DIR)/inc $(TOOL_INC_DIR)
MODULE_SRCS:=$(wildcard $(MODULE_SRC_DIR)/*.c)
MODULE_OBJS:=$(addprefix $(MODULE_BIN_DIR)/, $(notdir $(patsubst %.c, %.o, $(MODULE_SRCS))))
MODULE_DEPS:=$(MODULE_OBJS:.o=.d)

all : exec

exec : $(MODULE_DEPS) $(MODULE_OBJS)
	$(CC) $(CFLAGS) $(MOUDLE_CFLAGS) -o $(TARGET)  $(MODULE_OBJS) $(LDFLAGS) $(MOUDLE_LDFLAGS)

$(MODULE_OBJS) : %.o : %.d
	$(MAKE) -f $< 
	
$(MODULE_DEPS) : $(MODULE_BIN_DIR)/%.d : src/%.c
	@$(CC) $(MODULE_MM) $(CFLAGS) $(MOUDLE_CFLAGS) $(MODULE_INC_DIR) $(TOP_INC_DIR) $< -o $@
	@echo '	$(CC) $(CFLAGS) $(MOUDLE_CFLAGS) $(MODULE_INC_DIR) $(TOP_INC_DIR) -c $< -o $(patsubst %.d, %.o, $@)' >> $@ 

install:
	mkdir -p ${BIN_DIR}
	$(STRIP) $(TARGET)
	$(CP) $(TARGET) ${BIN_DIR}

clean:
	rm -rf $(MODULE_OBJS)
	rm -rf $(MODULE_DEPS)
	rm -rf $(TARGET)

